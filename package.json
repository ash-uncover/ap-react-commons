{
  "name": "@uncover/react-commons",
  "version": "0.0.2",
  "description": "React common components",
  "author": "aSh <ash.uncover@gmail.com>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/ash-uncover/react-commons"
  },
  "main": "dist/react-commons.js",
  "scripts": {
    "build": "webpack",
    "watch": "webpack --watch --config webpack.config.js --progress --mode development",
    "lint": "standard --verbose | snazzy",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "test": "jest",
    "test-coverage": "jest --collectCoverage",
    "test-update": "jest --updateSnapshot"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "latest",
    "@fortawesome/free-brands-svg-icons": "latest",
    "@fortawesome/free-regular-svg-icons": "latest",
    "@fortawesome/free-solid-svg-icons": "latest",
    "@fortawesome/react-fontawesome": "latest"
  },
  "peerDependencies": {
    "react": "latest",
    "react-dom": "latest"
  },
  "devDependencies": {
    "@babel/core": "latest",
    "@babel/preset-env": "latest",
    "@babel/preset-react": "latest",
    "babel-eslint": "latest",
    "babel-jest": "latest",
    "babel-loader": "latest",
    "css-loader": "latest",
    "file-loader": "latest",
    "jest": "latest",
    "node-sass": "latest",
    "react-test-renderer": "latest",
    "sass-loader": "latest",
    "snazzy": "latest",
    "standard": "latest",
    "style-loader": "latest",
    "webpack": "latest",
    "webpack-cli": "latest",
    "webpack-dev-server": "latest"
  },
  "standard": {
    "parser": "babel-eslint",
    "env": [
      "jest"
    ],
    "ignore": [
      "/dist/**/*.*"
    ]
  },
  "eslintConfig": {
    "extends": "react-app",
    "env": {
      "node": true,
      "jest": true
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
